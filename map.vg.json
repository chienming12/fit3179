{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "COVID-19 Death Cases",
    "width": 800,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/chienming12/fit3179/main/us-10m.json",
        "format": { "type": "topojson", "feature": "counties" }
    },
    "layer": [{
            "transform": [
                { "calculate": "'Data is not available in ' + datum.State", "as": "note" }
            ],
            "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" },
            "encoding": { "tooltip": { "field": "note" } }
        },
        {
            "transform": [{
                "lookup": "id",
                "from": {
                    "data": {
                        "url": "https://media.githubusercontent.com/media/chienming12/fit3179/main/US_Accidents_Dec21_updated_cleaned.csv"
                    },
                    "key": "State",
                    "fields": ["Temperature(F)"]
                }
            }],
            "projection": { "type": "albersUsa" },
            "mark": "geoshape",
            "encoding": {
                "color": {
                    "field": "Temperature(F)",
                    "type": "quantitative",
                    "scale": { "type": "log" }
                },
                "tooltip": [
                    { "field": "ID", "type": "nominal" },
                    { "field": "State", "type": "nominal" },
                    {
                        "field": "Temperature(F)",
                        "type": "quantitative",
                        "title": "Temperature"
                    }
                ]
            }
        }
    ]
}